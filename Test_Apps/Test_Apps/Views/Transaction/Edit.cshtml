@model Test_Apps.Models.Transaksi

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container p-3 my-3 border">
    <h1>Edit Transaksi</h1>

    <div class="row">
        <div class="col-sm-6">
            <hr />
            <form asp-action="Edit">
                <input type="hidden" asp-for="TransactionId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <select class="form-control" asp-for="AccountId" asp-items="@(new SelectList(ViewBag.CustommerList, "AccountId", "Name"))">
                        <option value="" disabled>--Select--</option>
                    </select>
                    <input type="hidden" asp-for="AccountId" />
                    <span asp-validation-for="AccountId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="date" asp-for="TransactionDate" class="form-control" />
                    <span asp-validation-for="TransactionDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select class="form-control" asp-for="DebitCreditStatus">
                        <option value="" disabled>--Select--</option>
                        <option value="D">Debit</option>
                        <option value="C">Credit</option>
                    </select>
                    <input type="hidden" asp-for="DebitCreditStatus" />
                    <span asp-validation-for="DebitCreditStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="number" asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Save" />
                    <a class="btn btn-danger" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>